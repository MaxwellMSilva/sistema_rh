<%- include('parts/header.ejs') %>

<style>
    .container {
        width: 100%;
        height: 100vh;
        background-color: #FFF;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container_login {
        background-color: #FFF;
        border: 1px solid #DDD;
        border-radius: 0px 10px 10px 10px;
        box-shadow: inset 5px 5px 5px #DDD5;
        width: 300px;
        position: relative;
        height: 20rem;
        color: #444;
    }

    @media (max-width: 800px) {
        .container_login {
            width: 100%;
            height: 50vh;
        }
    }

    .form_login {
        display: flex;
        align-items: center;
        height: 100%;
        position: relative;
        flex-direction: column;
    }

    .ct_form {
        padding: 60px 0;
    }

    .title-card {
        font-size: 18px;
        padding: 20px 0;
        border-bottom: 1px solid #DDD;
    }

    .align_center {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login {
        display: flex;
        flex-direction: column;
    }

    .container_button {
        position: absolute;
        display: flex;
        justify-content: center;
        bottom: 10;
        left: 0;
        padding: 0;
        margin: 0;
        width: 100%;
    }

    .btn_logar {
        width: 50%;
        height: 40px;
    }
</style>

<div class="container">
    <div class="ui container_login">
        <div class="form_login">
            <div class="title-card align_center">
                <div class="header">Insira seu código de administrador</div>
            </div>

            <form action="/authenticate" method="POST">
                <div class="ct_form">
                    <div class="ui left icon input">
                        <input type="password" name="senha_acesso" placeholder="Código de ADM" required>
                        <i class="user icon"></i>
                    </div>
                </div>
                <div class="container_button">
                    <button type="submit" class="ui right labeled icon button blue btn_logar">
                        <i class="right arrow icon"></i>
                        Logon 
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('parts/footer.ejs') %>
