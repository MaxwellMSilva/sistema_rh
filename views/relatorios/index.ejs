<%- include('../parts/header.ejs') %>

<%- include('../parts/navbar.ejs') %>

<div class="ui container container_search">
    <div>
        <form class="ui form" action="/relatorios" method="POST">
        <div class="fields" style="display: flex; justify-content: space-between;">
            <div class="field">
                <label>Nome do Funcionário: </label>
                <div class="ui left icon input">
                    <input type="text" name="funcionario_nomeCompleto">
                    <i class="id card outline icon"></i>
                </div>
            </div>
            <div class="field">
                <label>Departamento: </label>
                <div class="ui left icon input">
                    <input type="text" name="departamento_nome">
                    <i class="bookmark icon"></i>
                </div>
            </div>
            <div class="field">
                <label>Data de Admissão: </label>
                <div class="ui input">
                    <input type="date" name="funcionario_dataAdmissao">
                </div>
            </div>
            <div class="field">
                <label for=""></label>
                <button class="ui button green" style="margin-top: 22px;">Pesquisar</button>
            </div>
        </div>
        </form>
    </div>

    <table class="ui striped table">
        <thead>
            <tr>
                <th>Funcionário(a)</th>
                <th>Função</th>
                <th>Departamento</th>
                <th>Salário</th>
                <th>Admissão</th>
            </tr>
        </thead>

        <tbody>
            <% funcionarios.forEach(funcionario => { %>
                <tr>
                    <td><%=funcionario.funcionario_nomeCompleto %></td>
                    <td><%=funcionario.funcao_nome %></td>
                    <td><%=funcionario.departamento_nome %></td>
                    <td><%=funcionario.funcionario_salario %></td>
                    <td><%=funcionario.funcionario_dataAdmissao %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../parts/footer.ejs') %>
